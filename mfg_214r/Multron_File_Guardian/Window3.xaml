<Window x:Class="Multron_File_Guardian.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Multron RSA Key Generator"
        Height="600"
        Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Loaded="Load">

    <Border Background="{DynamicResource BackgroundColor}" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="4" BlurRadius="20" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" CornerRadius="12,12,0,0"
                    BorderBrush="{DynamicResource PrimaryColor}" BorderThickness="0,0,0,2"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0,0,0">
                        <TextBlock Text="Multron RSA Key Generator"
                                   Foreground="{DynamicResource TextPrimary}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <Border Background="{DynamicResource PrimaryColor}" CornerRadius="4" Padding="6,2" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Utility" Foreground="White" FontSize="10" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,15,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Width="90">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Content="─"
                                    Click="MinimizeButton_Click"
                                    Width="46"
                                    Height="32"
                                    Background="Transparent"
                                    Foreground="{DynamicResource TextSecondary}"
                                    FontSize="14"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource BorderColor}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Grid.Column="1"
                                    Content="✕"
                                    Click="CloseButton_Click"
                                    Width="46"
                                    Height="32"
                                    Background="Transparent"
                                    Foreground="{DynamicResource TextSecondary}"
                                    FontSize="14"
                                    BorderThickness="0"
                                    Margin="5,0,0,0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource DangerColor}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="30,20,30,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{DynamicResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="🔓" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0" Grid.Column="0"/>
                            <TextBlock Text="Public Key" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource PrimaryColor}" VerticalAlignment="Center" Grid.Column="1"/>
                            <Button Style="{DynamicResource CopyButton}" Content="Copy" Click="CopyPublicKey_Click" Grid.Column="2"/>
                        </Grid>

                        <Border Grid.Row="1" Background="{DynamicResource ListBoxBackground}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="2" CornerRadius="6" Padding="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox x:Name="textBoxPublicKey" 
                                         Background="Transparent" 
                                         BorderThickness="0" 
                                         IsReadOnly="True" 
                                         TextWrapping="Wrap" 
                                         FontFamily="Consolas" 
                                         FontSize="11" 
                                         Foreground="{DynamicResource TextPrimary}"/>
                            </ScrollViewer>
                        </Border>

                        <TextBlock Grid.Row="2" Text="Share this key publicly for encryption" Foreground="{DynamicResource TextSecondary}" FontSize="11" FontStyle="Italic" Margin="0,10,0,0" TextAlignment="Center"/>
                    </Grid>
                </Border>

                <Border Grid.Column="2" Style="{DynamicResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="🔒" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0" Grid.Column="0"/>
                            <TextBlock Text="Private Key" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource DangerColor}" VerticalAlignment="Center" Grid.Column="1"/>
                            <Button Style="{DynamicResource CopyButton}" Content="Copy" Click="CopyPrivateKey_Click" Grid.Column="2"/>
                        </Grid>

                        <Border Grid.Row="1" Background="{DynamicResource ListBoxBackground}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="2" CornerRadius="6" Padding="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox x:Name="textBoxPrivateKey" 
                                         Background="Transparent" 
                                         BorderThickness="0" 
                                         IsReadOnly="True" 
                                         TextWrapping="Wrap" 
                                         FontFamily="Consolas" 
                                         FontSize="11" 
                                         Foreground="{DynamicResource TextPrimary}"/>
                            </ScrollViewer>
                        </Border>

                        <Border Grid.Row="2" Background="#FFF3CD" BorderBrush="#FFD700" BorderThickness="2" CornerRadius="6" Padding="8" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#856404"/>
                                <TextBlock Text="Keep this key secure and private!" Foreground="#856404" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="2" Background="{DynamicResource SurfaceColor}" CornerRadius="0,0,12,12" Padding="30,20,30,25" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Style="{DynamicResource InfoButton}" VerticalAlignment="Center" Click="InfoButton_Click"/>

                    <Button Grid.Column="2" x:Name="btnGenerate" Content="🔑 Generate RSA Keys" Style="{DynamicResource ModernButton}" Width="240" Height="50" FontSize="15" Click="GenerateKeys_Click"/>

                    <StackPanel Grid.Column="4" VerticalAlignment="Center">
                        <TextBlock Text="Key Length (bits)" Foreground="{DynamicResource TextSecondary}" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox x:Name="comboBoxKeyLength" 
                                  Style="{DynamicResource ModernComboBox}"
                                  Width="180" 
                                  SelectedIndex="2" 
                                  SelectionChanged="comboBoxKeyLength_SelectionChanged">
                            <ComboBoxItem Content="2048"/>
                            <ComboBoxItem Content="3072"/>
                            <ComboBoxItem Content="4096"/>
                            <ComboBoxItem Content="8192"/>
                            <ComboBoxItem Content="16384"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>