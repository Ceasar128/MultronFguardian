<Window x:Class="Multron_File_Guardian.Window6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multron NoteGuard 1.3.7"
        MinWidth="760"
        MinHeight="570"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <Style x:Key="FlatMenuStyle" TargetType="Menu">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="FlatMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <DockPanel>

        <Border DockPanel.Dock="Top" Height="34"
                Background="{DynamicResource ToolBarBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,0,0,1">

            <Grid Margin="6,0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">

                    <Menu Style="{StaticResource FlatMenuStyle}" ItemContainerStyle="{StaticResource FlatMenuItemStyle}" IsMainMenu="True">
                        <MenuItem Header="Browse" Click="toolStripButton1_Click"/>
                    </Menu>

                    <Menu Style="{StaticResource FlatMenuStyle}" ItemContainerStyle="{StaticResource FlatMenuItemStyle}" IsMainMenu="True">
                        <MenuItem Header="Save" Click="toolStripButton2_Click"/>
                    </Menu>
                    <Menu x:Name="OptionsMenu"
                          Style="{StaticResource FlatMenuStyle}"
                          ItemContainerStyle="{StaticResource FlatMenuItemStyle}"
                          IsMainMenu="True">

                        <MenuItem Header="Options ▼">
                            <MenuItem Header="Algorithm" Name="Algerate">
                                <MenuItem Header="AES" Name="aESToolStripMenuItem0"/>
                                <MenuItem Header="Serpent" Name="toolStripMenuItem1"/>
                                <MenuItem Header="Twofish" Name="toolStripMenuItem2"/>
                                <MenuItem Header="ThreeFish" Name="toolStripMenuItem3"/>
                                <MenuItem Header="Camellia" Name="toolStripMenuItknem4"/>
                                <MenuItem Header="ChaCha20" Name="serpentToolStripMenuItem5"/>
                                <MenuItem Header="SM4" Name="sM4ToolStripMenuItem6"/>
                                <MenuItem Header="HC" Name="hCToolStripMenuItem7"/>
                            </MenuItem>

                            <MenuItem Header="Symmetric Key Length"
                                      Name="symmetricKeyLengthToolStripMenuItem"
                                      Click="symmetricKeyLengthToolStripMenuItem_Click"/>

                            <MenuItem Header="Encrypt while saving"
                                      Name="tosavencrypttWhileSavingToolStripMenuItem"
                                      IsCheckable="True"
                                      Click="tosavencrypttWhileSavingToolStripMenuItem_Click"/>

                            <MenuItem Header="Encrypt-then-MAC"
                                      Name="tosavencryptthenMACToolStripMenuItem"
                                      IsCheckable="True"
                                      IsChecked="True"
                                      Click="tosavencryptthenMACToolStripMenuItem_Click"/>

                            <MenuItem Header="Change Font"
                                      Name="changeFontToolStripMenuItem"
                                      Click="changeFontToolStripMenuItem_Click"/>
                        </MenuItem>
                    </Menu>

                    <Menu x:Name="TargetMenu"
                          Style="{StaticResource FlatMenuStyle}"
                          ItemContainerStyle="{StaticResource FlatMenuItemStyle}"
                          IsMainMenu="True">
                        <MenuItem Header="Target File ▼">
                            <MenuItem Header="Reset Target File" Click="resetTargetFileToolStripMenuItem_Click"/>
                            <MenuItem Header="Set Target File" Click="setTargetFileToolStripMenuItem_Click"/>
                            <MenuItem Header="Show Target File" Click="showTargetFileToolStripMenuItem_Click"/>
                        </MenuItem>
                    </Menu>

                    <Menu Style="{StaticResource FlatMenuStyle}" ItemContainerStyle="{StaticResource FlatMenuItemStyle}" IsMainMenu="True">
                        <MenuItem Header="Clear" Click="toolStripButton4_Click"/>
                    </Menu>

                    <Menu Style="{StaticResource FlatMenuStyle}" ItemContainerStyle="{StaticResource FlatMenuItemStyle}" IsMainMenu="True">
                        <MenuItem Header="About" Click="toolStripButton3_Click"/>
                    </Menu>

                </StackPanel>
            </Grid>
        </Border>

        <Border DockPanel.Dock="Bottom" Height="40" Margin="5"
                Background="{DynamicResource SurfaceColor}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Key" FontWeight="Bold" FontSize="13" Margin="10,1,10,0"
                           Foreground="{DynamicResource TextPrimary}"/>
                <TextBox x:Name="textBox2" Width="230" FontWeight="Bold" FontSize="12"
                         Padding="5,3" Background="{DynamicResource SurfaceColor}"
                         Foreground="{DynamicResource TextPrimary}"
                         BorderBrush="{DynamicResource BorderColor}"
                         BorderThickness="1"
                         TextChanged="textBox2_TextChanged"/>
                <CheckBox x:Name="checkBox1" Grid.Row="2"
                                Content="Show Password"
                                HorizontalAlignment="Left"
                                Margin="10,0,0,3"
                                VerticalAlignment="Bottom"
                                Foreground="{DynamicResource TextPrimary}" Click="checkBox1_Click"/>
            </StackPanel>
        </Border>

        <TextBox x:Name="textBox1" Margin="5" Padding="5" FontWeight="Bold" AcceptsReturn="True" AcceptsTab="True" TextWrapping="NoWrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="{DynamicResource SurfaceColor}" Foreground="{DynamicResource TextPrimary}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1"/>

    </DockPanel>
</Window>
