<Window x:Class="Multron_File_Guardian.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MFG Settings" 
        Height="693" 
        Width="850"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Border Background="{DynamicResource BackgroundColor}" CornerRadius="10" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="5" BlurRadius="20" Opacity="0.2" Direction="270"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
 
            <Border Grid.Row="0" 
                    Background="{DynamicResource SurfaceColor}" 
                    CornerRadius="10,10,0,0"
                    BorderBrush="{DynamicResource PrimaryColor}"
                    BorderThickness="0,0,0,2"
                    Padding="15,10"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Multron File Guardian"
                                   Foreground="{DynamicResource TextPrimary}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                        <Border Background="{DynamicResource PrimaryColor}" 
                                CornerRadius="4" 
                                Padding="6,2" 
                                Margin="10,0,0,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="SETTINGS" 
                                       Foreground="White" 
                                       FontSize="10" 
                                       FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,-10,-15,-10" VerticalAlignment="Top">
                        <Button Content="─" 
                                Click="MinimizeButton_Click"
                                Width="46" Height="32"
                                Background="Transparent"
                                Foreground="{DynamicResource TextSecondary}"
                                FontSize="14"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource BorderColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="✕" 
                                Click="CloseButton_Click"
                                Width="46" Height="47"
                                Background="Transparent"
                                Foreground="{DynamicResource TextSecondary}"
                                FontSize="14"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource DangerColor}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border> 
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="10,15">
                <StackPanel>
 
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Password Settings" 
                                           Style="{DynamicResource CardTitleText}"/>
                                <CheckBox x:Name="showpassword1" 
                                          Content="Show Password" 
                                          IsChecked="False" 
                                          IsEnabled="True"
                                          Style="{DynamicResource ModernToggleSwitch}" Click="showpassword1_Click"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="File Operations" 
                                           Style="{DynamicResource CardTitleText}"/>
                                <CheckBox x:Name="dfafterencrypted1" 
                                          Content="Delete After Processing" 
                                          IsChecked="False" 
                                          Style="{DynamicResource ModernToggleSwitch}" 
                                          Checked="DeleteFileAfter_Changed" 
                                          Unchecked="DeleteFileAfter_Changed" 
                                          Margin="0,0,0,8"/>
                                <CheckBox x:Name="shredbd" 
                                          Content="Shred Before Deleting" 
                                          Style="{DynamicResource ModernToggleSwitch}" 
                                          Checked="shredbd_CheckedChanged" 
                                          Unchecked="shredbd_CheckedChanged"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Algorithm Info" 
                                           Style="{DynamicResource CardTitleText}"/>
                                <CheckBox x:Name="savealgorithm1" 
                                          Content="Save Algorithm Info" 
                                          IsChecked="False" 
                                          Style="{DynamicResource ModernToggleSwitch}" 
                                          Checked="SaveAlgorithm_Changed" 
                                          Unchecked="SaveAlgorithm_Changed"/>
                            </StackPanel>
                        </Border>
                    </Grid> 
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="KeyHold Close" 
                                           Style="{DynamicResource CardTitleText}"/>
                                <CheckBox x:Name="ckh1" 
                                          Content="Close After Write Key" 
                                          IsChecked="False" 
                                          Style="{DynamicResource ModernToggleSwitch}" 
                                          Checked="KeyHoldClose_Changed" 
                                          Unchecked="KeyHoldClose_Changed"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Compression (ZIP)" 
                                           Style="{DynamicResource CardTitleText}"/>
                                <CheckBox x:Name="cmpression1" 
                                          Content="Compress/Decompress" 
                                          IsChecked="False" 
                                          Style="{DynamicResource ModernToggleSwitch}" 
                                          Checked="Compression_Changed" 
                                          Unchecked="Compression_Changed"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Appearance" 
                                           Style="{DynamicResource CardTitleText}"/>
                                <CheckBox x:Name="theme1" 
                                          Content="Dark Theme" 
                                          IsChecked="False" 
                                          Style="{DynamicResource ModernToggleSwitch}" 
                                          Checked="Theme_Changed" 
                                          Unchecked="Theme_Changed"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                 
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="Password Iteration" 
                                               Style="{DynamicResource CardTitleText}"
                                               Margin="0"/>
                                    <Button Style="{DynamicResource InfoButton}" 
                                            HorizontalAlignment="Right" 
                                            Click="InfoButton_PasswordIteration_Click"/>
                                </Grid>

                                <CheckBox x:Name="iterationaut1" 
                                          Content="Manual Mode" 
                                          IsChecked="False" 
                                          Style="{DynamicResource ModernToggleSwitch}" 
                                          Checked="IterationAut_Changed" 
                                          Unchecked="IterationAut_Changed" 
                                          Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="textBox1" 
                                             Style="{DynamicResource ModernTextBox}" 
                                             MaxLength="3" 
                                             IsEnabled="False" 
                                             PreviewTextInput="textBox1_PreviewTextInput" 
                                             PreviewKeyDown="textBox1_PreviewKeyDown" 
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1" 
                                            Content="✓" 
                                            Style="{DynamicResource IconButtonStyle}" 
                                            x:Name="rjButton3" 
                                            Click="ConfirmIteration_Click" 
                                            IsEnabled="False"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Argon2id Memory" 
                                           Style="{DynamicResource CardTitleText}"/>
                                <RadioButton x:Name="argmem1" 
                                             Content="256 MB" 
                                             GroupName="ArgonMemory" 
                                             IsChecked="True" 
                                             Margin="0,0,0,8" 
                                             Click="argmem1_Click" 
                                             Foreground="{DynamicResource TextPrimary}"/>
                                <RadioButton x:Name="argmem2" 
                                             Content="512 MB" 
                                             GroupName="ArgonMemory" 
                                             Margin="0,0,0,8" 
                                             Click="argmem2_Click" 
                                             Foreground="{DynamicResource TextPrimary}"/>
                                <RadioButton x:Name="argmem3" 
                                             Content="1 GB" 
                                             GroupName="ArgonMemory" 
                                             Click="argmem3_Click" 
                                             Foreground="{DynamicResource TextPrimary}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="Screen Protection" 
                                               Style="{DynamicResource CardTitleText}"
                                               Margin="0"/>
                                    <Button Style="{DynamicResource InfoButton}" 
                                            HorizontalAlignment="Right" 
                                            Click="InfoButton_ScreenProtection_Click"/>
                                </Grid>
                                <CheckBox x:Name="xscapz1" 
                                          Content="Enable Protection" 
                                          IsChecked="True" 
                                          Style="{DynamicResource ModernToggleSwitch}" 
                                          Checked="ScreenProtection_Changed" 
                                          Unchecked="ScreenProtection_Changed"/>
                            </StackPanel>
                        </Border>
                    </Grid>
 
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="Shredder Iteration" 
                                               Style="{DynamicResource CardTitleText}"
                                               Margin="0"/>
                                    <Button Style="{DynamicResource InfoButton}" 
                                            HorizontalAlignment="Right" 
                                            Click="InfoButton_ShredderIteration_Click"/>
                                </Grid>

                                <CheckBox x:Name="iterationshrd1" 
                                          Content="Manual Mode" 
                                          IsChecked="False" 
                                          Style="{DynamicResource ModernToggleSwitch}" 
                                          Checked="IterationShrd_Changed" 
                                          Unchecked="IterationShrd_Changed" 
                                          Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="textBox2" 
                                             Style="{DynamicResource ModernTextBox}" 
                                             MaxLength="2" 
                                             IsEnabled="False" 
                                             PreviewTextInput="textBox2_PreviewTextInput" 
                                             PreviewKeyDown="textBox2_PreviewKeyDown" 
                                             Margin="0,0,10,0"/>
                                    <Button Grid.Column="1" 
                                            Content="✓" 
                                            Style="{DynamicResource IconButtonStyle}" 
                                            x:Name="rjButton4" 
                                            Click="ConfirmSiteration_Click" 
                                            IsEnabled="False"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="Windows Explorer Integration" 
                                               Style="{DynamicResource CardTitleText}"
                                               Margin="0"/>
                                    <Button Style="{DynamicResource InfoButton}" 
                                            HorizontalAlignment="Right" 
                                            Click="InfoButton_Explorer_Click"/>
                                </Grid>

                                <Button Content="Add to Windows Explorer" 
                                        Style="{DynamicResource ModernButton}" 
                                        Margin="0,0,0,10" 
                                        Click="AddToExplorer_Click"/>
                                <Button Content="Remove from Explorer" 
                                        Style="{DynamicResource ModernButton}" 
                                        Margin="0,0,0,15" 
                                        Click="RemoveFromExplorer_Click" 
                                        Background="{DynamicResource NeutralColor}"/>

                                <TextBlock Text="Restart explorer.exe"
                                           Foreground="{DynamicResource PrimaryColor}"
                                           FontWeight="Medium"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Cursor="Hand"
                                           MouseLeftButtonDown="RestartExplorer_Click"
                                           TextDecorations="Underline"
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>