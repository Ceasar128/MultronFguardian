<Window x:Class="Multron_File_Guardian.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Multron Key Hold" 
        Height="600" 
        Width="850"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen">

    <Border Background="{DynamicResource BackgroundColor}" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="5" BlurRadius="20" Opacity="0.2"/>
        </Border.Effect>

        <Grid Margin="0,0,0,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" CornerRadius="12,12,0,0"
                    BorderBrush="{DynamicResource PrimaryColor}" BorderThickness="0,0,0,2"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0,0,0">
                        <TextBlock Text="Multron Key Hold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <Border Background="{DynamicResource PrimaryColor}"
                                CornerRadius="4"
                                Padding="6,2"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="Utility" Foreground="White" FontSize="10" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,15,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Width="90">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Content="─"
                                    Width="46"
                                    Height="32"
                                    Click="MinimizeButton_Click"
                                    Background="Transparent"
                                    Foreground="{DynamicResource TextSecondary}"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource BorderColor}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Grid.Column="1"
                                    Content="✕"
                                    Width="46"
                                    Height="32"
                                    Margin="5,0,0,0"
                                    Click="CloseButton_Click"
                                    Background="Transparent"
                                    Foreground="{DynamicResource TextSecondary}"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource DangerColor}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" Margin="30,20,30,15" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>

                    <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="📋 Saved Users &amp; Keys" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource PrimaryColor}" Margin="0,0,0,5"/>
                            <TextBlock Text="Store and manage public keys for easy access" FontSize="11" Foreground="{DynamicResource TextSecondary}"/>
                        </StackPanel>
                    </Border>

                    <Border x:Name="SecurityWarningBanner" Background="#FFF3CD" BorderBrush="#FFC107" BorderThickness="2" CornerRadius="10" Padding="20" Margin="0,15,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="⚠️" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#856404"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Security Warning" FontSize="15" FontWeight="Bold" Foreground="#856404" Margin="0,0,0,8"/>
                                <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#856404">
                                    ⚡ This storage is designed for PUBLIC KEYS ONLY!
                                    🔓 Data is stored WITHOUT encryption - not protected by any password!
                                    ❌ Never store PRIVATE KEYS here!
                                </TextBlock>
                            </StackPanel>
                            <Button Grid.Column="2" Width="28" Height="28" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="CloseWarningBanner_Click">
                                <TextBlock Text="✕" FontSize="18" FontWeight="Bold" Foreground="#856404" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </Border>

                    <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,15">
                        <ListBox x:Name="listBox1" Style="{DynamicResource ModernListBox}" BorderThickness="0" SelectionMode="Single"/>
                    </Border>

                    <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="👤" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Public Key Owner" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                            </StackPanel>
                            <TextBox x:Name="textBox1" Style="{DynamicResource ModernTextBox}" Height="40"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="🔓" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Public Key" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                            </StackPanel>
                            <TextBox x:Name="textBox2" Style="{DynamicResource ModernTextBox}" Height="40"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{DynamicResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Row="0" Grid.Column="0" Content="➕ Add Key" Style="{DynamicResource ModernButton}" Height="45" Click="AddKey_Click"/>
                            <Button Grid.Row="0" Grid.Column="2" Content="💾 Save Changes" Style="{DynamicResource ModernButton}" Height="45" Click="SaveKeys_Click"/>
                            <Button Grid.Row="0" Grid.Column="4" Content="🗑️ Clear Item" Style="{DynamicResource DangerButton}" Height="45" Click="ClearItem_Click"/>

                            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Content="✏️ Write Selected to Key Section" Style="{DynamicResource SecondaryButton}" Height="45" FontSize="15" Click="WriteToKeySection_Click"/>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Border>
</Window>