<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Multron_File_Guardian.Window5"
        Title="Multron File Guardian"
        Width="720"
        Height="560"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen" ContentRendered="Window_ContentRendered" Loaded="Window_Loaded">

    <Border Background="{DynamicResource BackgroundColor}" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="5" BlurRadius="20" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceColor}"
                    CornerRadius="12,12,0,0"
                    BorderBrush="{DynamicResource PrimaryColor}"
                    BorderThickness="0,0,0,2"
                    MouseLeftButtonDown="TitleBar_MouseDown">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0,0,0">
                        
                        <TextBlock Text="Multron File Guardian" x:Name="label5"
                                   Foreground="{DynamicResource TextPrimary}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <Border Background="{DynamicResource PrimaryColor}"
                                CornerRadius="4"
                                Padding="6,2"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="Context Integration" Foreground="White" FontSize="10" FontWeight="Bold"/>
                        </Border>
                        
                    </StackPanel>
                    <Button x:Name="stngsbtn" 
    Width="86" Height="26"
    Background="Transparent"
    BorderThickness="0"
    Cursor="Hand"
    Margin="100,0,-420,0" Click="stngsbtn_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                                                <TextBlock Text="🛠️ Settings"
                                       FontSize="15"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource DonateHover}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource DonateHoverText}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,15,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0"
                                    Content="─"
                                    Style="{DynamicResource TitleBarButton}"
                                    Click="rjButton8_Click"/>

                            <Button Grid.Column="1"
                                    Content="✕"
                                    Style="{DynamicResource TitleBarButton}"
                                    Margin="5,0,0,0"
                                    Click="rjButton7_Click"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" Margin="30,20,30,15" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>

                    <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="🔐  Key / Password" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                            <TextBox x:Name="textBox1"
                                     Style="{DynamicResource ModernTextBox}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="40"
                                     Margin="0,10,0,10"/>
                            <Grid>
                                <CheckBox x:Name="checkBox1"
                                          Content="Show Password"
                                          VerticalAlignment="Center"
                                          Foreground="{DynamicResource TextPrimary}" Click="checkBox1_Click"/>
                                <Button x:Name="rjbutton1" Content="✓ OK"
                                        Width="80"
                                        HorizontalAlignment="Right"
                                        Style="{DynamicResource ModernButton}"
                                        Click="rjButton1_Click" Height="37" VerticalAlignment="Top"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="⚡ Encryption Algorithm" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                            <ComboBox x:Name="comboBox1"
                                      Style="{DynamicResource ModernComboBox}"
                                      Margin="0,10,0,0"
                                      SelectedIndex="0" SelectionChanged="comboBox1_SelectionChanged">
                                <ComboBoxItem Content="AES"/>
                                <ComboBoxItem Content="Serpent"/>
                                <ComboBoxItem Content="Twofish"/>
                                <ComboBoxItem Content="ThreeFish"/>
                                <ComboBoxItem Content="Camellia"/>
                                <ComboBoxItem Content="ChaCha20"/>
                                <ComboBoxItem Content="SM4"/>
                                <ComboBoxItem Content="HC"/>
                                <ComboBoxItem Content="AES-RSA Hybrid Algorithm"/>
                                <ComboBoxItem Content="Serpent-RSA Hybrid Algorithm"/>
                                <ComboBoxItem Content="Twofish-RSA Hybrid Algorithm"/>
                                <ComboBoxItem Content="ThreeFish-RSA Hybrid Algorithm"/>
                                <ComboBoxItem Content="Camellia-RSA Hybrid Algorithm"/>
                                <ComboBoxItem Content="ChaCha20-RSA Hybrid Algorithm"/>
                                <ComboBoxItem Content="SM4-RSA Hybrid Algorithm"/>
                                <ComboBoxItem Content="HC-RSA Hybrid Algorithm"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Border Style="{DynamicResource CardStyle}" Width="200" Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="🔑 Symmetric Key" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                                <ComboBox x:Name="comboBox3"
                                          Style="{DynamicResource ModernComboBox}"
                                          Margin="0,10,0,0"
                                          SelectedIndex="2">
                                    <ComboBoxItem Content="128"/>
                                    <ComboBoxItem Content="192"/>
                                    <ComboBoxItem Content="256"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <Border Style="{DynamicResource CardStyle}" Width="200" Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="🔒 Cipher Mode" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                                <ComboBox x:Name="comboBox4"
                                          Style="{DynamicResource ModernComboBox}"
                                          Margin="0,10,0,0"
                                          SelectedIndex="1">
                                    <ComboBoxItem Content="No-AUTH"/>
                                    <ComboBoxItem Content="Encrypt-then-MAC"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <Border Style="{DynamicResource CardStyle}" Width="200">
                            <StackPanel>
                                <TextBlock Text="🔐 RSA Key Length" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                                <ComboBox x:Name="comboBox2"
                                          Style="{DynamicResource ModernComboBox}"
                                          Margin="0,10,0,0"
                                          SelectedIndex="2">
                                    <ComboBoxItem Content="2048"/>
                                    <ComboBoxItem Content="3072"/>
                                    <ComboBoxItem Content="4096"/>
                                    <ComboBoxItem Content="8192"/>
                                    <ComboBoxItem Content="16384"/>
                                </ComboBox>
                            </StackPanel>

                        </Border>

                    </StackPanel>
                    <Button x:Name="rjbutton2" Content="Generate RSA Key"
Width="147"
HorizontalAlignment="Left"
Style="{DynamicResource ModernButton}"
Height="37" VerticalAlignment="Bottom" Click="rjbutton2_Click" Margin="0,8,0,0" RenderTransformOrigin="0.5,0.5">
                    </Button>
                </StackPanel>
                
            </ScrollViewer>

            <Grid x:Name="SettingsPopup"
                  Grid.RowSpan="2"
                  Visibility="Collapsed"
                  Background="#66000000"
                  MouseDown="SettingsPopup_MouseDown">

                <Border Background="{DynamicResource SurfaceColor}"
                        Width="280"
                        Padding="18"
                        CornerRadius="12"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                    <StackPanel>
                        <TextBlock Text="Settings" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,10"/>
                        <Button Content="Hold Keys"
                                Height="40"
                                Style="{DynamicResource ModernButton}"
                                Margin="0,8,0,0"
                                Click="label6_Click"/>
                        <Button Content="Create RSA Key"
                                Height="40"
                                Style="{DynamicResource ModernButton}"
                                Margin="0,8,0,0"
                                Click="label13_Click"/>
                        <Button Content="Close"
                                Height="40"
                                Style="{DynamicResource ModernButton}"
                                Margin="0,16,0,0"
                                Click="CloseSettingsPopup_Click"/>
                    </StackPanel>

                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>